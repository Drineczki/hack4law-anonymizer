{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["esnext", "dom", "dom.iterable"],
    "outDir": "build",
    "rootDir": "src",
    "target": "es5",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noEmit": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "noImplicitAny": false,
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["src"],
}
